<header class='header'>
  <div class='left-header'>
    <%= link_to image_tag("outcome_app_logo.png", class: "outcome_app_logo"), "/"%> 
  </div>

  <%# ログイン有無の条件分岐 %>
  <div class='right-header'>
    <% if user_signed_in? %>
      <ul class='signed-in-list'>
        <li><%= link_to "✔︎いいね", "/likes/user/#{current_user.id}", class: "like-list-btn" %></li>
        <li><%= link_to "✔︎","/likes/user/#{current_user.id}", class: 'like-list-btn-small' %>
        <li><%= link_to "✏︎ 投稿", new_item_path, class: "new-item-btn" %></li>
        <li><%= link_to image_tag(current_user.profile.image, class: "header-avatar"), user_path(current_user.id) %></li>
      </ul>
    <% else %>
    <ul class='not-signed-in-list'>
        <li><%= link_to 'ログイン', new_user_session_path, class: "sign-in-btn" %></li>
      </ul>
    <% end %>
  </div>
  <%# // ログイン有無の条件分岐 %>

</header> 